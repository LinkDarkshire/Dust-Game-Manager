{
  "name": "dust-game-manager",
  "version": "0.2.1-dev",
  "description": "A universal game manager for multiple platforms",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "debug": "electron . --debug",
    "dev": "electron . --debug",
    "test-backend": "python backend/scripts/main.py --debug",
    "diagnose": "node diagnose.js",
    "setup": "node setup.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "clean": "rimraf dist build node_modules/.cache",
    "update-version": "python update_version.py"
  },
  "keywords": [
    "game",
    "manager",
    "dlsite",
    "steam",
    "electron",
    "gaming",
    "universal",
    "library"
  ],
  "author": "Link Darkshire",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.linkdarkshire.dustgamemanager",
    "productName": "Dust Game Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!backend/src/**/*.pyc",
      "!backend/src/**/__pycache__",
      "!backend/.pytest_cache",
      "!logs/**/*",
      "!data/**/*",
      "!*.log",
      "!diagnose.js",
      "!setup.js",
      "!update_version.py",
      "!tracking.html",
      "!*.md"
    ],
    "extraFiles": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/*.pyc",
          "!**/__pycache__"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkDarkshire/Dust-Game-Manager.git"
  },
  "bugs": {
    "url": "https://github.com/LinkDarkshire/Dust-Game-Manager/issues"
  },
  "homepage": "https://github.com/LinkDarkshire/Dust-Game-Manager#readme"
}